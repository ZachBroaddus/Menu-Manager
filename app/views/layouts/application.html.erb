<!DOCTYPE html>
<html>
  <head>
    <title>MenuManagerZachBroaddus</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div id="nav-container">
      <nav>
        <ul style="list-style-type:none">
          <% unless current_page?(root_path) %>
            <%= link_to "Return to Menu", root_path %>
          <% end %>
          <% if logged_in? %>
            <li><%= link_to "Logout", logout_path %></li>
          <% else %>
          <li><%= link_to "Login", new_session_path %></li>
          <li><%= link_to "Sign up", new_user_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
    <%= yield %>
      <% unless current_order %>
        <%= button_to "Start Your Order", {:controller => :orders,
        :action => 'create' }, :method => :post %>
      <% else %>
        <%= button_to "Cancel Order", {:controller => :orders,
      :action => 'destroy', :id => current_order.id }, :method => :delete %>
      <% end %>
    <br><br>
    <footer>
      <span>Created by Zach Broaddus for Table XI</span>
    </footer>
  </body>
</html>
