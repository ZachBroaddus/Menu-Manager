<%= form_for @item, html: { multipart: true } do |f| %>
  <div class="form-group">
    <label for="item-name">Dish Name</label>
    <%= f.text_field :name, placeholder: "Name", class: 'form-control focus' %>
  </div>
  <div class="form-group">
    <label for="item-description">Description</label>
    <%= f.text_area :description, placeholder: "Description", class: 'form-control' %>
  </div>
  <div class="form-group">
    <label for="item-category">Category</label>
    <%= f.text_field :category, placeholder: "Category", class: 'form-control' %>
  </div>
  <div class="form-group">
    <label for="item-price">Price</label>
    <%= f.text_field :price, placeholder: "Price", class: 'form-control' %>
  </div>
  <div class="form-group">
    <label for="item-image">Image</label><br>
    <%= f.file_field :image, placeholder: "Select File" %>
  </div>
    <% if current_page?(new_item_path) %>
      <%= f.button "Confirm and Add", class: 'btn btn-primary', data: { disable_with: "<i class='fas fa-spinner fa-pulse'></i> Adding item..." } %>
    <% else %>
      <%= f.button "Confirm Changes", class: 'btn btn-primary', data: { disable_with: "<i class='fas fa-spinner fa-pulse'></i> Saving changes..." } %>
    <% end %>
<% end %>
