<div class="col-lg-4 col-md-6 mb-4">
  <div id="item_<%= item.id %>" class="card h-100 animated fadeIn">
      <%= image_tag item.image.url(:large), class: "card_img" %>
    <div class="card-body">
      <h4 class="card-title">
        <%= item.name %>
      </h4>
      <h5>$ <%= pretty_price(item.price) %></h5>
      <p class="card-text"><%= item.description %></p>
    </div>
    <div class="card-footer">
      <%= render :partial => "order_items/card_footer", locals: { item: item } %>
    </div>
  </div>
</div>
