<h3>Reset Password</h3>

<br>
<%= form_tag password_resets_path, method: :post do %>
  <div class="field form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email], placeholder: "Email", class: 'form-control' %>
  </div>
  <div class="actions"><%= button_tag "Reset Password", class: 'btn btn-primary', data: { disable_with: "<i class='fas fa-spinner fa-pulse'></i> Processing request..." } %>
  </div>
<% end %>
